<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/menu"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.74">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardScan"
                style="@style/MenuCard"
                app:layout_constraintEnd_toStartOf="@+id/cardRapidTest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    style="@style/MenuCardImage"
                    tools:src="@drawable/ic_cdc_logo" />

                <TextView
                    style="@style/MenuCardTitle"
                    android:text="實聯掃描" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRapidTest"
                style="@style/MenuCard"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardScan"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    style="@style/MenuCardImage"
                    tools:src="@drawable/ic_cdc_logo" />

                <TextView
                    style="@style/MenuCardTitle"
                    android:text="快篩站" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardNews"
                style="@style/MenuCard"
                app:layout_constraintEnd_toStartOf="@+id/cardRapidTest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardScan">

                <ImageView
                    style="@style/MenuCardImage"
                    tools:src="@drawable/ic_cdc_logo" />

                <TextView
                    style="@style/MenuCardTitle"
                    android:text="新聞稿" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMap"
                style="@style/MenuCard"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardScan"
                app:layout_constraintTop_toBottomOf="@+id/cardRapidTest">

                <ImageView
                    style="@style/MenuCardImage"
                    tools:src="@drawable/ic_cdc_logo" />

                <TextView
                    style="@style/MenuCardTitle"
                    android:text="口罩地圖" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>