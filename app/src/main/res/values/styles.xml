<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextAppearance.Navigation" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">#E5E7EA</item>
    </style>

    <style name="MenuCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>

    <style name="MenuCardImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="MenuDashboardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="MenuDashboardValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

</resources>
